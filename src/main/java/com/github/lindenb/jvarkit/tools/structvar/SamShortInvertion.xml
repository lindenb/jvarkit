<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "SamShortInvertion">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.structvar">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1">
<description>Scan short inversions in SAM</description>
<input type="sam"/>

<options>
	<option name="max_size_inversion" type='int' opt="m" longopt="maxsize" default="2000">
		<description>max size of inversion</description>
	</option>
	<option name="min_coverage" type='int' opt="c" longopt="mincov" default="10">
		<description>min coverage</description>
	</option>
</options>


<!-- __PLACEHOLDER__ -->
</app>
