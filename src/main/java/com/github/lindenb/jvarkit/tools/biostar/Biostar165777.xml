<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE app [
 <!ENTITY name "Biostar165777">
 <!ENTITY package "com.github.lindenb.jvarkit.tools.biostar">
]>
<app xmlns="http://github.com/lindenb/jvarkit/" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" app="&name;" package="&package;" __placeholder__="1"
	ui-swing='true'
	>
<description>Split a XML file</description>
<input type="stdin-or-one"/>


<options>
	<option name="count" type="int" opt="N" longopt="count" argname="number files to be created" default="100">
		<description>Number of files to be created</description>
	</option>
	<option name="tagName" type="string" opt="T" longopt="tag" argname="TagName">
		<description>XML tag to be split.e.g 'Hit' in blast </description>
	</option>
</options>

<!-- __PLACEHOLDER__ -->
</app>
